{
  "name": "Zectrack",
  "version": "1.0",
  "description": "Zectrack 是一個免費的嘖嘖專案分析神器，讓你輕鬆追蹤專案歷史紀錄，分析集資金額與贊助人數掌握專案進度。",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "icons": {
    "16": "zectrack-icon.png",
    "32": "zectrack-icon.png",
    "48": "zectrack-icon.png",
    "128": "zectrack-icon.png"
  },
  "browser_action": {
    "default_icon": "zectrack-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.zeczec.com/projects/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2
}
